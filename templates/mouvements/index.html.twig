{% extends 'base.html.twig' %}

{% block title %}Mouvements Liste{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Mouvements</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mouvement in mouvements %}
            <tr>
                <td>{{ mouvement.id }}</td>
                <td>{{ mouvement.type }}</td>
                <td>
                    <a href="{{ path('mouvements_show', {'id': mouvement.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('mouvements_edit', {'id': mouvement.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(mouvements) }}
    </div>

    <a href="{{ path('mouvements_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
