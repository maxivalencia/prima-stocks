{% extends 'base.html.twig' %}

{% block title %}Stocks Liste{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Stocks</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>CauseAnnulation</th>
                <th>DateSaisie</th>
                <th>DateValidation</th>
                <th>ReferencePanier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.quantite }}</td>
                <td>{{ stock.causeAnnulation }}</td>
                <td>{{ stock.dateSaisie ? stock.dateSaisie|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stock.dateValidation ? stock.dateValidation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stock.referencePanier }}</td>
                <td>
                    <a href="{{ path('stocks_show', {'id': stock.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('stocks_edit', {'id': stock.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(stocks) }}
    </div>

    <a href="{{ path('stocks_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
