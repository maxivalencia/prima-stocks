{% extends 'base.html.twig' %}

{% block title %}Validations Liste{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Validations</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Validation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for validation in validations %}
            <tr>
                <td>{{ validation.id }}</td>
                <td>{{ validation.validation }}</td>
                <td>
                    <a href="{{ path('validations_show', {'id': validation.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('validations_edit', {'id': validation.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(validations) }}
    </div>

    <a href="{{ path('validations_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
