<form method="post" action="{{ path('validations_delete', {'id': validation.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer ce donnée?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ validation.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
