{% extends 'base.html.twig' %}

{% block title %}Validation{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Validation</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ validation.id }}</td>
            </tr>
            <tr>
                <td>Validation</td>
                <td>{{ validation.validation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('validations_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('validations_edit', {'id': validation.id}) }}" class="btn btn-warning">Edition</a>
    <br><br>
    {{ include('validations/_delete_form.html.twig') }}
</div>
{% endblock %}
