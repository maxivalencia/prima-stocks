{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Client</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <td>Nom</td>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <td>Tel</td>
                <td>{{ client.tel }}</td>
            </tr>
            <tr>
                <td>Mail</td>
                <td>{{ client.mail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('clients_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('clients_edit', {'id': client.id}) }}" class="btn btn-warning">Edition</a>
    <br><br>
    {{ include('clients/_delete_form.html.twig') }}
</div>
{% endblock %}
