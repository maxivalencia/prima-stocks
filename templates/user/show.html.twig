{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Utilisateur</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <td>Nom</td>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <td>Prenom</td>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <td>Login</td>
                <td>{{ user.login }}</td>
            </tr>
            {# <tr>
                <td>Password</td>
                <td>{{ user.password }}</td>
            </tr> #}
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Edition</a>
    <br><br>
    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
