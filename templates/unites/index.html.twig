{% extends 'base.html.twig' %}

{% block title %}Unités Liste{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Unités</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Sigle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unite in unites %}
            <tr>
                <td>{{ unite.id }}</td>
                <td>{{ unite.nom }}</td>
                <td>{{ unite.sigle }}</td>
                <td>
                    <a href="{{ path('unites_show', {'id': unite.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('unites_edit', {'id': unite.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(unites) }}
    </div>

    <a href="{{ path('unites_new') }}" class="btn btn-success">Créer</a>
</div>
{% endblock %}
