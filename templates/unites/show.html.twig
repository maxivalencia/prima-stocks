{% extends 'base.html.twig' %}

{% block title %}Unité{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Unité</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ unite.id }}</td>
            </tr>
            <tr>
                <td>Nom</td>
                <td>{{ unite.nom }}</td>
            </tr>
            <tr>
                <td>Sigle</td>
                <td>{{ unite.sigle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('unites_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('unites_edit', {'id': unite.id}) }}" class="btn btn-warning">Edition</a>
    <br><br>
    {{ include('unites/_delete_form.html.twig') }}
</div>
{% endblock %}
