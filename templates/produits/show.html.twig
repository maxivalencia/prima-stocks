{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Produit</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <td>Produit</td>
                <td>{{ produit.produit }}</td>
            </tr>
            <tr>
                <td>Designation</td>
                <td>{{ produit.designation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produits_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('produits_edit', {'id': produit.id}) }}" class="btn btn-warning">Edition</a>
    <br><br>
    {{ include('produits/_delete_form.html.twig') }}
</div>
{% endblock %}
