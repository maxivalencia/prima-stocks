{% extends 'base.html.twig' %}

{% block title %}Access Liste{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Acces</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Access</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for access in accesses %}
            <tr>
                <td>{{ access.id }}</td>
                <td>{{ access.access }}</td>
                <td>
                    <a href="{{ path('access_show', {'id': access.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('access_edit', {'id': access.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(accesses) }}
    </div>


    <a href="{{ path('access_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
